{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/ctx/*": [
        "src/ctx/*"
      ],
      "@/store/*": [
        "src/store/*"
      ],
      "@/screens/*": [
        "src/screens/*"
      ],
      "@/navigation/*": [
        "src/navigation/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ]
    }
  },
  "extends": "@react-native/typescript-config",
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods"
  ]
}